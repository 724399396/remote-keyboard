<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.weili.remotekeyboardclient.MainActivity">

    <Button
        android:id="@+id/mBackward"
        android:layout_width="128dp"
        android:layout_height="68dp"
        android:text="middle-backward"
        android:layout_above="@+id/lBackward"
        android:layout_alignStart="@+id/lBackward"
        android:layout_marginBottom="36dp" />

    <Button
        android:id="@+id/mForward"
        android:layout_width="128dp"
        android:layout_height="68dp"
        android:text="middle-forward"
        android:layout_alignBaseline="@+id/mBackward"
        android:layout_alignBottom="@+id/mBackward"
        android:layout_alignStart="@+id/lForward" />

    <Button
        android:id="@+id/lBackward"
        android:layout_width="128dp"
        android:layout_height="68dp"
        android:text="long-backward"
        android:layout_marginStart="43dp"
        android:layout_alignBottom="@+id/lForward"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/lForward" />

    <Button
        android:id="@+id/lForward"
        android:layout_width="128dp"
        android:layout_height="68dp"
        android:text="long-forward"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="14dp" />

    <Button
        android:id="@+id/previous"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:text="previous"
        android:layout_alignTop="@+id/next"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <Button
        android:id="@+id/play"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:text="play"
        android:layout_marginBottom="17dp"
        android:layout_alignBottom="@+id/next"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/next"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:text="next"
        android:layout_above="@+id/mBackward"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="66dp" />

    <Button
        android:id="@+id/dVolume"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:text="down volume"
        android:layout_alignBottom="@+id/mute"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp" />

    <Button
        android:id="@+id/mute"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:text="mute"
        android:layout_above="@+id/play"
        android:layout_alignStart="@+id/play"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/uVolume"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:text="up volume"
        android:layout_marginTop="11dp"
        android:layout_alignTop="@+id/dVolume"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/full"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:text="full"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/mute" />

    <Button
        android:id="@+id/open"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:text="open"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/shutdown"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:text="shutdown" />

    <Button
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="close"
        android:layout_above="@+id/uVolume"
        android:layout_toEndOf="@+id/dVolume"
        android:layout_marginStart="10dp" />
</RelativeLayout>
